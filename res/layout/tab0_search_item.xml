<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
     >

    <com.android.volley.toolbox.NetworkImageView 
        android:id="@+id/tab0_search_item_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/meat" />
 <TextView
        android:id="@+id/tab0_search_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tab0_search_item_img"
        android:layout_toRightOf="@id/tab0_search_item_img"
        android:textColor="#3f342d"
        android:textSize="20sp" />
  <TextView
        android:id="@+id/tab0_search_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab0_search_item_name"
        android:layout_toRightOf="@id/tab0_search_item_img"
        android:textColor="#3f342d"
        android:textSize="20sp" />
  <TextView
        android:id="@+id/tab0_search_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab0_search_item_id"
        android:layout_toRightOf="@id/tab0_search_item_img"
        android:textColor="#3f342d"
        android:textSize="20sp" />
  <TextView
        android:id="@+id/tab0_search_item_re"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab0_search_item_price"
        android:layout_toRightOf="@id/tab0_search_item_img"
        android:textColor="#3f342d"
        android:textSize="20sp" />
</RelativeLayout>