<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0a118"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tab1_addshare"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/login" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" >

        <EditText
            android:id="@+id/account_editText"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:background="@drawable/shape7"
            android:gravity="center" />

        <EditText
            android:id="@+id/password_editText"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tab1_share_item_titile_textview"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:inputType="textPassword"
            android:background="@drawable/shape7"
            android:gravity="center" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/account_editText"
            android:layout_alignParentTop="true"
            android:text="账号"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tab1_share_item_titile_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/account_editText"
            android:layout_below="@+id/account_editText"
            android:text="密码"
            android:textColor="#fff" />

        <CheckBox
            android:id="@+id/remember_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/password_editText"
            android:layout_below="@+id/password_editText"
            android:paddingLeft="10dp"
            android:text="保存密码"
            android:textSize="15sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
         >

        <Button
            android:id="@+id/login_button"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
            android:text="登    陆"
            android:textColor="#fff" />

        <Button
            android:id="@+id/logon_button"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
            android:text="注     册"
            android:textColor="#fff" />

        <Button
            android:id="@+id/test_button_login"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="测试登入按钮" 
            android:textSize="10dip"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
         <TextView
            android:id="@+id/textView333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其它账号登陆："
            android:textSize="15dip"
            android:textColor="#000" 
            android:layout_marginLeft="20dp"/>
         <ImageView
            android:id="@+id/imageView333"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_qq"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp" />
         <ImageView
            android:id="@+id/imageView334"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_sinaweibo" />
        </LinearLayout>
    </LinearLayout>
 
</LinearLayout>