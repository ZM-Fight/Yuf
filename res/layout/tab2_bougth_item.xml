<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

      <com.android.volley.toolbox.NetworkImageView 
        android:id="@+id/tab2_bought_item_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/tab2_bought_item_time"
        android:layout_alignLeft="@+id/tab2_bought_item_time"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/meat" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_below="@+id/tab2_bought_item_img"
        android:layout_alignParentLeft="true"
 />

    <TextView
        android:id="@+id/tab2_bought_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="2014年7月1日10点00分"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tab2_bought_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tab2_bought_item_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="红烧牛肉"
        android:textSize="20sp"
        android:textColor="#3f342d" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tab2_bought_item_name"
        android:layout_below="@+id/tab1_addshare"
        android:text="金额:"
        android:textSize="13sp"
        android:textColor="#F15A24" />

    <TextView
        android:id="@+id/status"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/tab2_bought_item_img"
        android:layout_alignRight="@+id/tab1_addshare"
        android:layout_marginBottom="5dp"
        android:text="正在配菜"
        android:gravity="center_vertical"
        android:textSize="13sp"
        android:background="#A5988B"
        android:textColor="#fff"
        android:layout_marginRight="11dp" />

    <ImageView
        android:id="@+id/tab1_addshare"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/tab2_bought_item_name"
        android:layout_alignParentRight="true"
        android:src="@drawable/rightrow" />

    <TextView
        android:id="@+id/tab2_bought_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:text="28元"
        android:textSize="13sp"
        android:textColor="#F15A24" />

    <TextView
        android:id="@+id/tab2_bought_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignTop="@+id/status"
        android:text="份数:" />

</RelativeLayout>