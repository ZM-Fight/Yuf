<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        style="@style/TitleBar" >

        <TextView
            android:text="待付款"
            style="@style/TitleText"/>

        <ImageView
            android:id="@+id/tab2_waitforpay_back_imageView"
            style="@style/TitleBackImage"/>

        <ImageView
            android:id="@+id/imageView8"
            style="@style/TitleSoundImage"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottem"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#000"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tab2_waitforpray_totalprize_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="总额:"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tab2_waitforpray_prize_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tab2_waitforpray_totalprize_textview"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="128元"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/tab2_waitforpay_ok_button1"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="#07B498"
            android:text="确定" 
            android:textSize="18sp"
            android:textColor="#fff"/>
    </RelativeLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/tab2_waitforpay_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottem"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/RelativeLayout01"
        android:divider="#ccc"
        android:dividerHeight="0.8dp"
        android:fadingEdgeLength="0dp" >

    </com.handmark.pulltorefresh.library.PullToRefreshListView>

</RelativeLayout>