<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <android.support.v4.view.ViewPager
        android:id="@+id/ViewPager1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="#f0f" >

    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/tab0_food_cook_step_steporder_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ViewPager1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="TextView" />

    <TextView
        android:id="@+id/tab1_share_item_titile_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab0_food_cook_step_steporder_textview"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab1_share_item_titile_textview"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="TextView" />

    <com.yuf.app.ui.indicator.CirclePageIndicator
        android:id="@+id/circlePageIndicator1"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/ViewPager1"
        android:layout_alignLeft="@+id/ViewPager1"
        android:background="#fff" />

</RelativeLayout>
