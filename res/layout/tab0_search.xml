<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:src="@drawable/notify" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="搜索"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/tab0_search_back_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/button_details_gohome" />

    </RelativeLayout>
    
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/title"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

            
           <SearchView
	            android:id="@+id/dish_name"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:focusable="false"
	            android:background="@drawable/search_rounded" >
	        </SearchView>
         
            <SearchView
	            android:id="@+id/dish_difficulty"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:focusable="false"
	            android:background="@drawable/search_rounded" >
	        </SearchView> 

            <SearchView
	            android:id="@+id/dish_method"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:focusable="false"
	            android:background="@drawable/search_rounded" >
	        </SearchView>
      
            
            <SearchView
	            android:id="@+id/dish_time"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:focusable="false"
	            android:background="@drawable/search_rounded" >
	        </SearchView>
	        
            <SearchView
	            android:id="@+id/dish_people_amount"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:visibility="gone"
	            android:focusable="false"
	            android:background="@drawable/search_rounded" >
	        </SearchView>

     
             <ListView
	            android:id="@+id/tab0_search_listview"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:divider="#c19651"
	            android:dividerHeight="1.5dp" >
	        </ListView>
     
             
    </LinearLayout>
    
    

    

</RelativeLayout>
