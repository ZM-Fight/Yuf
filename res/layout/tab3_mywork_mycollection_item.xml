<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

   <com.android.volley.toolbox.NetworkImageView
       android:id="@+id/tab3_mywork_item_img"
       android:layout_width="90dp"
       android:layout_height="90dp"
       android:layout_alignLeft="@+id/tab3_mywork_item_time"
       android:layout_below="@+id/tab3_mywork_item_time"
       android:layout_marginBottom="10dp"
       android:layout_marginTop="6dp"
       android:background="@drawable/no_pic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_below="@+id/tab3_mywork_item_img"
        android:layout_alignParentLeft="true" />
    <TextView
        android:id="@+id/tab3_mywork_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="2014年7月1日10点00分"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tab3_mywork_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tab3_mywork_item_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="红烧牛肉"
        android:textSize="20sp"
        android:textColor="#3f342d" />

    <ImageView
        android:id="@+id/tab1_addshare"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/tab3_mywork_item_name"
        android:layout_alignParentRight="true"
        android:src="@drawable/rightrow" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tab3_mywork_item_name"
        android:layout_below="@+id/tab1_addshare"
        android:text="xxxxxxxxxxxxxxxxxxxxx"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/tab3_mywork_item_commentnum"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/tab3_mywork_item_img"
        android:layout_alignRight="@+id/tab1_addshare"
        android:layout_marginRight="10dp"
        android:background="#F7931E"
        android:gravity="center"
        android:text="评论（50）"
        android:textColor="#fff"
        android:textSize="13sp" />

</RelativeLayout>
